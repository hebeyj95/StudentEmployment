@{
    ViewData["Title"] = "Add Movie";
}
@model ApplicationResponse;

<h1>@ViewData["Title"]</h1>

<h3>Use the form below to add a movie to the collection</h3>
<div>
    <form method="post">
        <input type="hidden" asp-for="ApplicationId" />
        <div class="form-group">
            <label asp-for="CategoryID">Category:</label>
            <select asp-for="CategoryID">
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryID">@c.CategoryName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Title">Title:</label>
            <input asp-for="Title" />
        </div>
        <div class="form-group">
            <label asp-for="Year">Year:</label>
            <input asp-for="Year" />
        </div>
        <div class="form-group">
            <label asp-for="Director">Director:</label>
            <input asp-for="Director" />
        </div>
        <div class="form-group">
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Edited">Edited:</label>
            <select asp-for="Edited">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="LentTo">Lent To:</label>
            <input asp-for="LentTo" />
        </div>

        <div class="form-group">
            <label asp-for="Notes">Notes:</label>
            <input asp-for="Notes" />
        </div>

        <br />
        <br />

        <button type="submit" class="btn-success">Submit</button>
        

    </form>
</div>

<br />
<div class="validation" asp-validation-summary="All"></div>
