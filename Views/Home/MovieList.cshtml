@{
    ViewData["Title"] = "Movie List";

}

@model List<ApplicationResponse>

<div class="text-center">
    <h1 class="display-4">The Joel Hilton Movie Collection</h1>
</div>

<div class="align-content-center">
    <table class="table table-striped">
        <thead class="font-weight-bold">
            <tr>
                <td>Category</td>
                <td>Title</td>
                <td>Year</td>
                <td>Director</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>Lent To</td>
                <td>Notes</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@x.ApplicationId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@x.ApplicationId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    

</div>